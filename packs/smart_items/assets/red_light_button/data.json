{
  "id": "6f380825-70bb-42f9-8dce-57563c7ac582",
  "name": "Red Light Button",
  "category": "buttons",
  "tags": ["button"],
  "components": {
    "core::GltfContainer": {
      "src": "{assetPath}/red_scifi_button.glb"
    },
    "asset-packs::Actions": {
      "id": "{self}",
      "value": [
        {
          "name": "Play Activate Animation",
          "type": "play_animation",
          "jsonPayload": "{ \"animation\": \"trigger\" }"
        },
        {
          "name": "Play Sound",
          "type": "play_sound",
          "jsonPayload": "{ \"src\": \"{assetPath}/sound.mp3\" }"
        }
      ]
    },
    "asset-packs::Triggers": {
      "value": [
        {
          "type": "on_input_action",
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Activate Animation"
            },
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Sound"
            }
          ],
          "basicViewId": "trigger-when-clicked"
        }
      ]
    },
    "core-schema::Sync-Components": {
      "value": ["core::Animator", "core::AudioSource"]
    },
    "inspector::Config": {
      "isBasicViewEnabled": true,
      "componentName": "Button",
      "fields": [
        {
          "name": "When Clicked",
          "type": "asset-packs::Triggers",
          "basicViewId": "trigger-when-clicked"
        }
      ]
    }
  }
}
