{
  "id": "1b0ea1b1-9672-4853-8aa1-5405473747d9",
  "name": "Audio Stream",
  "category": "utils",
  "tags": ["audio", "stream"],
  "components": {
    "core::GltfContainer": {
      "src": "{assetPath}/radio.glb",
      "invisibleMeshesCollisionMask": 0
    },
    "core::VisibilityComponent": {
      "visible": false
    },
    "core::MeshCollider": {
      "collisionMask": 1,
      "mesh": { "$case": "box", "box": {} }
    },
    "core::AudioStream": {
      "url": "",
      "playing": true
    },
    "asset-packs::Actions": {
      "id": "{self}",
      "value": [
        {
          "name": "Play",
          "type": "set_state",
          "jsonPayload": "{ \"state\": \"Playing\" }"
        },
        {
          "name": "Stop",
          "type": "set_state",
          "jsonPayload": "{ \"state\": \"Stopped\" }"
        },
        {
          "name": "Play Audio Stream",
          "type": "play_audio_stream",
          "jsonPayload": "{ \"url\": \"\", \"volume\": \"1.0\" }"
        },
        {
          "name": "Stop Audio Stream",
          "type": "stop_audio_stream",
          "jsonPayload": "{}"
        }
      ]
    },
    "asset-packs::Triggers": {
      "value": [
        {
          "type": "on_click",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Playing"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Stop"
            }
          ]
        },
        {
          "type": "on_click",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Stopped"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play"
            }
          ]
        },
        {
          "type": "on_state_change",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Playing"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Audio Stream"
            }
          ]
        },
        {
          "type": "on_state_change",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Stopped"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Stop Audio Stream"
            }
          ]
        }
      ]
    },
    "asset-packs::States": {
      "id": "{self}",
      "value": ["Playing", "Stopped"],
      "defaultValue": "Stopped"
    }
  }
}
